{
  "name": "countries",
  "version": "1.0.0",
  "description": "world countries backend",
  "author": "Artemov Anton",
  "license": "none",
  "private": true,
  "scripts": {
    "install-modules": "yarn install && cd Frontend && yarn install",
    "client": "cd Frontend && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "prod": "SET NODE_ENV=production&& cd Frontend && yarn build && cd .. && node server.js",
    "start": "node server.js",
    "heroku-prebuild": "cd Frontend && yarn install --production=false && yarn build"
  },
  "nodemonConfig": {
    "ignore": [
      "Frontend/*"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.2",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "rimraf": "^2.6.2"
  },
  "engines": {
    "node": "8.8.1"
  }
}
